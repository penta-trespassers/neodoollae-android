<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_button_pressed">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/color_button_pressed"/>
            <stroke
                android:width="0dp"
                android:color="#ffffff"/>
            <size
                android:width="100dp"
                android:height="36dp"/>
            <corners
                android:radius="100dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/color_button"/>
            <stroke
                android:width="0dp"
                android:color="#ffffff"/>
            <size
                android:width="100dp"
                android:height="40dp"/>
            <corners
                android:radius="100dp"/>
        </shape>
    </item>
</ripple>
